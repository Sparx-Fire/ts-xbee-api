{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "checkJs": true,

    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "lib/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
