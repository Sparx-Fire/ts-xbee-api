{
  "name": "ts-xbee-api",
  "description": "Node.js and Chrome communicate with XBee/ZigBee devices in API mode",
  "version": "1.0.4",
  "homepage": "https://github.com/flaviut/ts-xbee-api",
  "author": {
    "name": "Jan Kolkmeier",
    "email": "jankolkmeier@gmail.com",
    "url": "http://kolkmeier.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/flaviut/ts-xbee-api.git"
  },
  "bugs": {
    "url": "https://github.com/flaviut/ts-xbee-api/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.dist.json && sed -i -e s,BufferBuilder,{},g -e s,BufferReader,{},g dist/*.d.ts",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./errors": {
      "import": "./dist/errors.js",
      "types": "./dist/errors.d.ts"
    }
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "serialport": "~10.4.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "keywords": [],
  "dependencies": {
    "buffer-builder": "^0.2.0",
    "buffer-reader": "^0.1.0",
    "typed-emitter": "^2.1.0"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "*.{json,md,yaml,html}": "prettier --write --ignore-unknown"
  }
}
